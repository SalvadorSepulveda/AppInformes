      <VBox layoutX="10.0" layoutY="10.0">
         <children>
            <Label text="Introduce el ID del cliente">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="0.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="clientNumber" prefHeight="25.0" prefWidth="66.0" >
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" text="Button" onAction="#FacturasPorCliente" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
